<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:text="Email"
        android:textColor="@color/itemcolors"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pseudo"
        android:id="@+id/login_email"
        android:textColorHint="@color/colorWhite"
        android:layout_marginLeft="25dp"
        android:paddingLeft="@dimen/_12ssp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/ic_backgroundbutton"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="password"
        android:textColor="@color/itemcolors"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:id="@+id/login_mdp"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        android:textColorHint="@color/colorWhite"
        android:background="@drawable/ic_backgroundbutton"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingLeft="@dimen/_12ssp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="80dp"
        android:gravity="end"
        android:text="Create an account"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_login_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:background="@drawable/ic_roundedbutton"
        android:text="Login"
        android:textColor="@color/colorWhite" />
</LinearLayout>