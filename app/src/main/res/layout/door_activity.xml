<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testplug"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_270sdp"
        android:gravity="center"
        android:background="@drawable/ic_roundedbutton2"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/opentv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


    </LinearLayout><LinearLayout
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_40sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:gravity="center"
    android:background="@drawable/ic_roundedbutton2"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LapTop"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/openlaptop"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:gravity="center"
        android:background="@drawable/ic_roundedbutton2"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desktop"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/openDesktop"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


    </LinearLayout>
</LinearLayout>